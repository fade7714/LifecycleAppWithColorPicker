<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Okrąg z wybranym kolorem -->

        <FrameLayout
            android:id="@+id/colorCirle"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:background="@drawable/circle">

            <TextView
                android:id="@+id/hexLabel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="#FFFFFFF"
                android:textStyle="bold"
                android:textSize="20sp"/>

        </FrameLayout>

        <!-- Przycisk wywołujący ColorPicker -->
        <Button
            android:id="@+id/btnColorPicker"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/button"
            android:text="Wybierz kolor"
            android:textColor="#FFFFFF"
            android:textColorLink="#FFFFFF"
            android:textStyle="bold"/>

        <!-- Stan życia aplikacji-->
        <TextView
            android:id="@+id/statusTxt"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/statusbox"
            android:gravity="center"
            android:text="State"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>